	lot = log --all --graph --decorate --oneline
	ba = branch --all
	ca = commit --amend
	ci = commit
	co = checkout
	ds = diff --staged
	rh = reset --hard
	rbi = "!git rebase -i HEAD~\"$1\" #"
	arc = !git add . && git rebase --continue
	acp = !git add . && git cherry-pick --continue
	rpo = remote prune origin
	pt = !git tag -l | xargs git tag -d && git fetch -t
